<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_topic_document_item"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/systemFill"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/topic_doc_item_main_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="6dp"
        app:riv_mutate_background="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topic_doc_item_main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Main Label"
        android:textColor="@color/label"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/topic_doc_item_secondary_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_topic_document_item" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topic_doc_item_secondary_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Middle Label"
        android:textColor="@color/secondaryLabel"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic_doc_item_main_title" />

</androidx.constraintlayout.widget.ConstraintLayout>