<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment">

    <com.cellgroup.cellapp.ui.sharedUI.ViewPagerWithDelegate
        android:id="@+id/step_view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </com.cellgroup.cellapp.ui.sharedUI.ViewPagerWithDelegate>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/secondarySystemBackground"
        android:id="@+id/step_view_controller_bar"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:text="@string/step_button_next"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/label_dark"
            android:textSize="16sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/step_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <Button
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:text="@string/step_button_prev"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/label_dark"
            android:textSize="16sp"
            android:visibility="visible"
            tools:visibility="visible" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


